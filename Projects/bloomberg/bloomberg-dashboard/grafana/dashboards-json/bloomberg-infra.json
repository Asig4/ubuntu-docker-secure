{
  "uid": "bloomberg-infra",
  "title": "Bloomberg â€” Infrastructure",
  "description": "Infrastructure monitoring with CPU, RAM, network, container metrics and collector health",
  "tags": ["bloomberg", "infra", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "time": { "from": "now-1h", "to": "now" },
  "fiscalYearStartMonth": 0,
  "liveNow": true,
  "style": "dark",
  "editable": true,
  "graphTooltip": 1,
  "templating": { "list": [] },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "CPU USAGE",
      "gridPos": { "h": 10, "w": 8, "x": 0, "y": 0 },
      "transparent": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "#ff8c00" },
          "custom": {
            "axisBorderShow": false,
            "axisColorMode": "text",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 15,
            "gradientMode": "opacity",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 1,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "line+area" }
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "transparent", "value": null },
              { "color": "rgba(255,59,59,0.1)", "value": 80 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "hidden", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "MEMORY USAGE",
      "gridPos": { "h": 10, "w": 8, "x": 8, "y": 0 },
      "transparent": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "RAM %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "#00d4aa" },
          "custom": {
            "axisBorderShow": false,
            "axisColorMode": "text",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 15,
            "gradientMode": "opacity",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "pointSize": 1,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "line+area" }
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "transparent", "value": null },
              { "color": "rgba(255,59,59,0.1)", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "hidden", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "NETWORK I/O",
      "gridPos": { "h": 10, "w": 8, "x": 16, "y": 0 },
      "transparent": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*|br-.*|docker.*\"}[5m])",
          "legendFormat": "RX {{ device }}"
        },
        {
          "refId": "B",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "-rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|br-.*|docker.*\"}[5m])",
          "legendFormat": "TX {{ device }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisColorMode": "text",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "lineInterpolation": "smooth",
            "lineWidth": 1,
            "pointSize": 1,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "unit": "Bps",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        },
        "overrides": [
          {
            "matcher": { "id": "byRegexp", "options": "/TX/" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "#ff8c00" } }
            ]
          },
          {
            "matcher": { "id": "byRegexp", "options": "/RX/" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "#00d4aa" } }
            ]
          }
        ]
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 4,
      "type": "table",
      "title": "CONTAINERS",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 10 },
      "transparent": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"bloomberg.*\"}[5m]) * 100",
          "legendFormat": "{{ name }}",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "B",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "container_memory_usage_bytes{name=~\"bloomberg.*\"}",
          "legendFormat": "{{ name }}",
          "instant": true,
          "format": "table"
        },
        {
          "refId": "C",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "container_start_time_seconds{name=~\"bloomberg.*\"}",
          "legendFormat": "{{ name }}",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "id": true, "image": true, "instance": true, "job": true },
            "renameByName": {
              "name": "Container",
              "Value #A": "CPU %",
              "Value #B": "Memory",
              "Value #C": "Started"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "filterable": true,
            "inspect": false
          },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "#e2e8f0", "value": null }] }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Container" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "#ff8c00" } },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } },
              { "id": "custom.width", "value": 250 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "CPU %" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "decimals", "value": 2 },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{ "color": "#00d4aa", "value": null }, { "color": "#ff8c00", "value": 50 }, { "color": "#ff3b3b", "value": 80 }] } },
              { "id": "custom.cellOptions", "value": { "type": "color-text" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Memory" },
            "properties": [
              { "id": "unit", "value": "bytes" },
              { "id": "decimals", "value": 0 }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Started" },
            "properties": [
              { "id": "unit", "value": "dateTimeFromNow" }
            ]
          }
        ]
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": { "show": false },
        "sortBy": [{ "displayName": "Container", "desc": false }]
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Market Feeder",
      "gridPos": { "h": 4, "w": 3, "x": 0, "y": 20 },
      "transparent": true,
      "datasource": { "type": "influxdb", "uid": "influxdb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "influxdb", "uid": "influxdb" },
          "query": "from(bucket: \"markets\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"price\")\n  |> filter(fn: (r) => r._field == \"last\")\n  |> group()\n  |> count()\n  |> map(fn: (r) => ({r with _value: if r._value > 0 then 1 else 0}))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "#00d4aa", "index": 0 }, "0": { "text": "DOWN", "color": "#ff3b3b", "index": 1 } } }
          ],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "#ff3b3b", "value": null }, { "color": "#00d4aa", "value": 1 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "center",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "orientation": "horizontal"
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "News Feeder",
      "gridPos": { "h": 4, "w": 3, "x": 3, "y": 20 },
      "transparent": true,
      "datasource": { "type": "influxdb", "uid": "influxdb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "influxdb", "uid": "influxdb" },
          "query": "from(bucket: \"news\")\n  |> range(start: -10m)\n  |> filter(fn: (r) => r._measurement == \"article\")\n  |> filter(fn: (r) => r._field == \"title\")\n  |> group()\n  |> count()\n  |> map(fn: (r) => ({r with _value: if r._value > 0 then 1 else 0}))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "1": { "text": "UP", "color": "#00d4aa", "index": 0 }, "0": { "text": "DOWN", "color": "#ff3b3b", "index": 1 } } }
          ],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "#ff3b3b", "value": null }, { "color": "#00d4aa", "value": 1 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "none",
        "colorMode": "background",
        "justifyMode": "center",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "orientation": "horizontal"
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Points/5min",
      "gridPos": { "h": 4, "w": 3, "x": 6, "y": 20 },
      "transparent": true,
      "datasource": { "type": "influxdb", "uid": "influxdb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "influxdb", "uid": "influxdb" },
          "query": "from(bucket: \"markets\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"price\")\n  |> filter(fn: (r) => r._field == \"last\")\n  |> group()\n  |> count()"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "#ff3b3b", "value": null }, { "color": "#ff8c00", "value": 10 }, { "color": "#00d4aa", "value": 30 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "area",
        "colorMode": "value",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "orientation": "horizontal"
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Articles/10min",
      "gridPos": { "h": 4, "w": 3, "x": 9, "y": 20 },
      "transparent": true,
      "datasource": { "type": "influxdb", "uid": "influxdb" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "influxdb", "uid": "influxdb" },
          "query": "from(bucket: \"news\")\n  |> range(start: -10m)\n  |> filter(fn: (r) => r._measurement == \"article\")\n  |> filter(fn: (r) => r._field == \"title\")\n  |> group()\n  |> count()"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "#ff3b3b", "value": null }, { "color": "#ff8c00", "value": 1 }, { "color": "#00d4aa", "value": 5 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "graphMode": "area",
        "colorMode": "value",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true,
        "showPercentChange": false,
        "orientation": "horizontal"
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "COLLECTOR WRITE LATENCY",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "transparent": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"bloomberg-market-feeder|bloomberg-news-feeder\"}[5m]) * 100",
          "legendFormat": "{{ name }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "axisBorderShow": false,
            "axisColorMode": "text",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "lineInterpolation": "smooth",
            "lineWidth": 1,
            "pointSize": 1,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "off" }
          },
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "DISK USAGE",
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 24 },
      "transparent": true,
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "(1 - (node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"} / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"tmpfs\"})) * 100",
          "legendFormat": "Disk %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "fixed", "fixedColor": "#f59e0b" },
          "custom": {
            "axisBorderShow": false,
            "axisColorMode": "text",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "gradientMode": "opacity",
            "lineInterpolation": "smooth",
            "lineWidth": 1,
            "pointSize": 1,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": { "group": "A", "mode": "none" },
            "thresholdsStyle": { "mode": "line" }
          },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "transparent", "value": null },
              { "color": "#ff3b3b", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "hidden", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    }
  ],
  "links": [
